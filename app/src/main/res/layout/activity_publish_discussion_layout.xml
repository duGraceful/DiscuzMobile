<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nestedscrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pub_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/add" />

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/back_icon"
                android:padding="4dp" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="top"
                android:hint="标题……"
                android:padding="4dp" />

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_below="@+id/et_title"
                android:background="@color/redpay_qi"
                android:id="@+id/view2" />


           <!-- <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_below="@+id/et_title"
                android:background="@color/redpay_qi"
                android:id="@+id/view2" />
-->
            <Spinner
                android:id="@+id/sp_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20sp"
                android:entries="@array/kinds"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="22dp"
                android:layout_toLeftOf="@+id/view"
                android:layout_toStartOf="@+id/view"
                android:padding="4dp"
                android:text="分类"
                android:id="@+id/textView2" />

            <View
                android:id="@+id/view"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/sp_kind"
                android:layout_below="@+id/sp_kind"
                android:background="@color/redpay_qi" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="内容……"
            android:padding="5dp" />

        <View

            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/leave_bt"
            android:gravity="center"
            android:padding="14dp"
            android:text="发表"
            android:textColor="@color/white" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
